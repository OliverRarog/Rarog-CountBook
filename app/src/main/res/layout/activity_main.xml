<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rarog_countbook.MainActivity"
    android:orientation="horizontal">


    <Button
        android:id="@+id/addCounterButton"
        android:drawableTop="@drawable/ic_add_black_24dp"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ListView
        android:id="@+id/counterListView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/addCounterButton"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="0dp" />
</android.support.constraint.ConstraintLayout>
